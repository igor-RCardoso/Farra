<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.geraldo.farra">

    <application
        android:name=".util.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.PrincipalUsuarioActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.IngressoVirtualActivity"
            android:label="@string/title_activity_ingresso_virtual"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.MeusIngressosActivity"
            android:label="@string/title_activity_meus_ingressos"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".controller.EventoActivity"
            android:label="@string/title_activity_pagina_evento"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".controller.PagamentoActivity"
            android:label="@string/title_activity_pagamento"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".controller.CartaoCreditoActivity"
            android:label="@string/title_activity_cartao_credito"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>